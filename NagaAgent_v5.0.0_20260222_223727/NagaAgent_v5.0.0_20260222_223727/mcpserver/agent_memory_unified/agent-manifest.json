{
  "version": "1.0.0",
  "displayName": "统一记忆服务",
  "description": "整合了知识图谱、日记和向量数据库三种记忆系统，提供统一的记忆存储和检索接口，支持智能类型选择和多后端融合检索",
  "author": "NagaAgent Team",
  "homepage": "https://github.com/nagaagent/nagaagent",
  "license": "MIT",
  "tools": [
    {
      "name": "store_memory",
      "displayName": "存储记忆",
      "description": "统一记忆存储，自动选择最优存储方式（知识图谱/日记/向量数据库）",
      "parameters": {
        "content": {
          "type": "string",
          "required": true,
          "description": "记忆内容"
        },
        "type": {
          "type": "string",
          "required": false,
          "default": "auto",
          "description": "记忆类型，auto表示自动选择",
          "enum": ["auto", "knowledge", "diary", "vector"]
        },
        "metadata": {
          "type": "object",
          "required": false,
          "description": "元数据（可选）"
        }
      }
    },
    {
      "name": "recall_memory",
      "displayName": "回忆记忆",
      "description": "智能回忆，支持语义检索、关键词检索、图谱检索和混合检索",
      "parameters": {
        "query": {
          "type": "string",
          "required": true,
          "description": "查询内容"
        },
        "mode": {
          "type": "string",
          "required": false,
          "default": "hybrid",
          "description": "查询模式",
          "enum": ["semantic", "keyword", "graph", "hybrid"]
        },
        "limit": {
          "type": "integer",
          "required": false,
          "default": 10,
          "description": "返回结果数量"
        }
      }
    },
    {
      "name": "generate_summary",
      "displayName": "生成总结",
      "description": "生成时间总结（日/周/月/季）",
      "parameters": {
        "period": {
          "type": "string",
          "required": false,
          "default": "week",
          "description": "时间周期",
          "enum": ["day", "week", "month", "quarter"]
        },
        "topic": {
          "type": "string",
          "required": false,
          "description": "主题过滤（可选）"
        }
      }
    },
    {
      "name": "manage_nodes",
      "displayName": "节点管理",
      "description": "知识节点管理（创建/更新/删除/列出）",
      "parameters": {
        "action": {
          "type": "string",
          "required": true,
          "description": "操作类型",
          "enum": ["create", "update", "delete", "list"]
        },
        "node_data": {
          "type": "object",
          "required": false,
          "description": "节点数据（创建/更新时需要）"
        }
      }
    }
  ],
  "config": {
    "memory": {
      "enabled": false
    },
    "vcp": {
      "enabled": false,
      "base_url": "http://127.0.0.1:6005"
    },
    "lifebook": {
      "enabled": true,
      "path": "summer_memory/diary"
    }
  },
  "dependencies": [],
  "examples": [
    {
      "tool": "store_memory",
      "description": "存储一条学习记忆",
      "params": {
        "content": "今天学习了Python的异步编程",
        "type": "auto",
        "metadata": {
          "type": "learning",
          "date": "2026-01-28"
        }
      }
    },
    {
      "tool": "recall_memory",
      "description": "检索关于Python的记忆",
      "params": {
        "query": "Python",
        "mode": "hybrid",
        "limit": 5
      }
    },
    {
      "tool": "generate_summary",
      "description": "生成周总结",
      "params": {
        "period": "week"
      }
    }
  ],
  "changelog": [
    {
      "version": "1.0.0",
      "date": "2026-01-28",
      "changes": [
        "初始版本",
        "整合了agent_memory、agent_lifebook、agent_vcp三个服务",
        "提供统一的记忆存储和检索接口"
      ]
    }
  ]
}
