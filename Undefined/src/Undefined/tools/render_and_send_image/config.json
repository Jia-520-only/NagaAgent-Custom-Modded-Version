{
    "type": "function",
    "function": {
        "name": "render_and_send_image",
        "description": "将 LaTeX 或 Markdown 文本渲染为图片并发送到指定目标（群聊或私聊）。支持完整的 LaTeX 语法（包含 \\begin 和 \\end）和标准 Markdown 格式。",
        "parameters": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string",
                    "description": "要渲染的文本内容。LaTeX 必须是完整格式（包含 \\begin 和 \\end），Markdown 是标准格式。"
                },
                "format": {
                    "type": "string",
                    "description": "格式类型",
                    "enum": ["latex", "markdown"]
                },
                "target_id": {
                    "type": "integer",
                    "description": "目标 ID（群号或用户 QQ 号）"
                },
                "message_type": {
                    "type": "string",
                    "description": "消息类型",
                    "enum": ["group", "private"]
                }
            },
            "required": ["content", "format", "target_id", "message_type"]
        }
    }
}