{
    "type": "function",
    "function": {
        "name": "query_friends",
        "description": "查询好友列表。支持按昵称或备注精确/模糊匹配，或获取全部好友。返回好友的QQ号、昵称和备注。",
        "parameters": {
            "type": "object",
            "properties": {
                "keyword": {
                    "type": "string",
                    "description": "搜索关键词（昵称或备注）。留空则返回全部好友。"
                },
                "exact": {
                    "type": "boolean",
                    "description": "是否精确匹配（默认 false 模糊匹配）",
                    "default": false
                },
                "count": {
                    "type": "integer",
                    "description": "返回的最大结果数（默认 20）",
                    "default": 20
                }
            }
        }
    }
}
