{
    "type": "function",
    "function": {
        "name": "find_member",
        "description": "在群内按昵称查找群成员。支持精确匹配和模糊匹配（子串、拼音首字母/全拼、编辑距离容错）。返回匹配成员的QQ号、昵称和角色。",
        "parameters": {
            "type": "object",
            "properties": {
                "nickname": {
                    "type": "string",
                    "description": "要搜索的昵称关键词"
                },
                "exact": {
                    "type": "boolean",
                    "description": "是否全字匹配（默认 false 模糊匹配）",
                    "default": false
                },
                "group_id": {
                    "type": "integer",
                    "description": "群号。如果已在群聊中，通常会自动获取。"
                },
                "count": {
                    "type": "integer",
                    "description": "返回的最大结果数（默认 10）",
                    "default": 10
                }
            },
            "required": ["nickname"]
        }
    }
}
